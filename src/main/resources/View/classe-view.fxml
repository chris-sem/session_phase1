<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="isty.iatic5.session_phase1.Controller.ClasseController">
    <top>
        <ToolBar>
            <Button fx:id="homeButton" text="Accueil" onAction="#goToHome"/>
        </ToolBar>
    </top>
    <center>
        <TableView fx:id="tableClasse">
            <columns>
                <TableColumn fx:id="promotionColumn" text="Promotion" />
                <TableColumn fx:id="specialiteColumn" text="Spécialité" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Promotion:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="promotionField" promptText="Promotion" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <!-- ComboBox pour la spécialité -->
            <Label text="Spécialité:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="specialiteComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="MT"/>
                        <String fx:value="IATIC"/>
                        <String fx:value="TEST"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <Button text="Ajouter" onAction="#addClasse" />
            <Button text="Supprimer" onAction="#removeClasse" />
        </GridPane>
    </bottom>
</BorderPane>
